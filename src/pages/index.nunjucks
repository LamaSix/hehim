  <section id="mission-statement">
    <h1>A dialogue about modern expressions of masculinity that is diverse, inclusive, equitable and just.</h1>
  </section>

  <section id="newsletter-signup">

    <h1>Get Updates</h1>

    <div id="mc_embed_signup">
      <form action="https://lamasix.us16.list-manage.com/subscribe/post?u=543c25805cf05076563093e23&amp;id=cdbe6b7142" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
        <div id="mc_embed_signup_scroll">
          <div class="mc-field-group">
          	<label for="mce-EMAIL">Email Address</label>
          	<input type="email" value="" name="EMAIL" class="required email" id="mce-EMAIL" placeholder="your email address">
          </div>
        	<div id="mce-responses">
        		<div class="response" id="mce-error-response" style="display:none"></div>
        		<div class="response" id="mce-success-response" style="display:none"></div>
        	</div>    <!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
          <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_543c25805cf05076563093e23_cdbe6b7142" tabindex="-1" value=""></div>
          <div class="clear"><input type="submit" value="Subscribe" name="subscribe" id="mc-embedded-subscribe" class="button"></div>
        </div>
      </form>
    </div>
    <!--End mc_embed_signup-->
