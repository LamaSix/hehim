{% set pageID = 'home' %}

{% extends "layout.nunjucks" %}

{% block content %}

  <section id="video-logo">
    <video muted autoplay playsinline loop poster="/assets/media/hehim.jpg">
      <source type="video/webm" src="/assets/media/hehim.webm">
      <source type="video/mp4" src="/assets/media/hehim.mp4">
    </video>
    <div class="border top">
    </div>
    <div class="border left">
    </div>
    <div class="border right">
